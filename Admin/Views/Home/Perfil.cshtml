@model CMS.Dominio.Entidades.Usuario

@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Alterar Perfil</h2>
                <h4 style="color:red;">@ViewBag.msg</h4>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" asp-action="Perfil" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="ID" />
                    <div class="form-group">
                        <label class="col-md-3 control-label">Nome</label>
                        <div class="col-md-6">
                            <input asp-for="Nome" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">Usuario</label>
                        <div class="col-md-6">
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Senha</label>
                        <div class="col-md-6 switch switch-success">
                            <input type="password" asp-for="Senha" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">Confirmar Senha</label>
                        <div class="col-md-6 switch switch-success">
                            <input type="password" name="confirmarSenha" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-6 col-xs-11">
                            <button type="submit" value="salvarValores" class="btn btn-success">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



@section Scripts{

}
