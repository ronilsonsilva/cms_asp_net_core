@model CMSSobreViewModel
@{
    ViewData["Title"] = "Alterar Página Sobre";
}



<div class="row">
    <div class="col-xs-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Tabela de Planos</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" asp-action="EditSobre" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="ID" />
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Titulo"></label>
                        <div class="col-md-6">
                            <input asp-for="Titulo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarTitulo"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarTitulo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="SubtTitulo"></label>
                        <div class="col-md-6">
                            <input asp-for="SubtTitulo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="SubTitulo"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="SubTitulo" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarImagem"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarImagem" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Image de Fundo</label>
                        <div class="col-md-6">
                            <input type="file" asp-for="ImagemArquivo" />
                        </div>
                        @if (Model?.Imagem != null)
                        {
                            <div class="col-md-3">
                                <a asp-action="VisualizarImageSobre" target="_blank">Visualizar Imagem</a>
                            </div>
                        }
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarWhatsApp"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarWhatsApp" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarFacebook"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarFacebook" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarInstagram"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarInstagram" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarGoogleMais"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarGoogleMais" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarPinterest"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarPinterest" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Conteudo"></label>
                        <div class="col-md-9">
                            @*<input name="conteudo" asp-for="Conteudo" class="summernote" data-plugin-summernote data-plugin-options='{ "height": 180, "codemirror": { "theme": "ambiance" } }'/>*@
                            <textarea asp-for="Conteudo" class="summernote" data-plugin-summernote data-plugin-options='{ "height": 180, "codemirror": { "theme": "ambiance" } }'></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-6 col-xs-11">
                            <button type="submit" value="salvarValores" class="btn btn-success">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



@section Scripts{

}