@model CMSFaleConoscoViewModel
@{
    ViewData["Title"] = "Editar Área Fale Conosco";
}



<div class="row">
    <div class="col-xs-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Editar Informações Do Website</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" asp-action="EditFaleConosco" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="ID" />
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Localizacao"></label>
                        <div class="col-md-6">
                            <input asp-for="Localizacao" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Email"></label>
                        <div class="col-md-6">
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarWhatsApp"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarWhatsApp" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarLocalizacao"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarLocalizacao" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="HabilitarEmail"></label>
                        <div class="col-md-6 switch switch-success">
                            <input type="checkbox" data-plugin-ios-switch asp-for="HabilitarEmail" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-6 col-xs-11">
                            <button type="submit" value="salvarValores" class="btn btn-success">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts{

}